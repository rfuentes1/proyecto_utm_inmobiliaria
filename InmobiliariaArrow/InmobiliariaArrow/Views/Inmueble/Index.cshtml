@{
    ViewData["Title"] = "Gesti√≥n-inmuebles";
    Layout = "~/Views/Template/_inmuebleLayout.cshtml";
}
<div class="d-flex justify-content-g-end" style="margin-left: 1100px;">
    <a class="btn btn-success mb-4" asp-controller="Inmueble" asp-action="Add">Nuevo inmueble</a>
</div>
<div class="container">
    <table class="table table-striped table-hover">
    <thead>
        <tr class="table-dark">
            <th scope="col">Id</th>
            <th scope="col">Inmueble</th>
            <th scope="col">Precio</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Renta/Venta</th>
            <th scope="col">Tipo vivienda</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @ViewBag.Inmuebles)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Inmueble</td>
                <td>@item.Precio</td>
                <td>@item.Descripcion</td>
                <td>@item.Estatus</td>
                <td>@item.Tipo_vivienda</td>
            </tr>
        }   
    </tbody>
    </table>

</div>
