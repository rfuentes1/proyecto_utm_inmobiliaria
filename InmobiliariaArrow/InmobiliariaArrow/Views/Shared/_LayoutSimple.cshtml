<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- grid.min.css hace que se pueda usar el gris -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" href="~/assets/style/index.css">
    <link rel="stylesheet" href="~/assets/style/@ViewData["Estilo"]">
    <title>@ViewData["Title"]</title>
</head>

<body>
    <div id="hero" class="container">
        <div id="header" class="d-flex">
            <div class="container">
                <div class="top-head row">
                    <div class="col-md-3 col-sm-4"><img id="logo" src="/assets/img/Logo_Arrow.png" alt="Logo_Arrow" width="150" height="150"></div>
                    <div class="col-md-3 col-sm-4"><h2>Bienes Raíces ARROW</h2></div>
                    <div class="col-md-3 col-sm-4"></div>
                    <div class="col-md-3 col-sm-4">Oficina (999)3105698</div>
                </div>
            </div>
        </div>
        <div class="container-fluid d-flex justify-content-center align-items-center">
            <nav class="navbar m-2 navbar-expand-lg navbar-light bg-light">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Ventas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Rentas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Conocenos" asp-action="Index">¿Quiénes somos?</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Contactanos" asp-action="Index">Contáctanos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Login" asp-action="Index">Iniciar sesión</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
    <div class="container">
        <main class="container-fluid d-flex flex-column align-items-center">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted fixed-bottom">
        <div class="container">
            &copy; 2021 - ARROW BIENES RAICES
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>